<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.project.Controller" style="-fx-padding: 20;">
    <TextField fx:id="display" 
            editable="false" 
            prefHeight="80" 
            style="-fx-font-size: 32px;
            -fx-background-color: black;
            -fx-alignment: center-right;  
            -fx-border-color: white; 
            -fx-border-width: 2;" />
    
    <GridPane hgap="10" vgap="10">
        <Button text="7" onAction="#handleNumber" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="80" prefHeight="80"/>
        <Button text="8" onAction="#handleNumber" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="80" prefHeight="80"/>
        <Button text="9" onAction="#handleNumber" GridPane.rowIndex="0" GridPane.columnIndex="2" prefWidth="80" prefHeight="80"/>
        <Button text="/" onAction="#handleOperator" GridPane.rowIndex="0" GridPane.columnIndex="3" prefWidth="80" prefHeight="80"/>

        <Button text="4" onAction="#handleNumber" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="80" prefHeight="80"/>
        <Button text="5" onAction="#handleNumber" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="80" prefHeight="80"/>
        <Button text="6" onAction="#handleNumber" GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="80" prefHeight="80"/>
        <Button text="*" onAction="#handleOperator" GridPane.rowIndex="1" GridPane.columnIndex="3" prefWidth="80" prefHeight="80"/>

        <Button text="1" onAction="#handleNumber" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="80" prefHeight="80"/>
        <Button text="2" onAction="#handleNumber" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="80" prefHeight="80"/>
        <Button text="3" onAction="#handleNumber" GridPane.rowIndex="2" GridPane.columnIndex="2" prefWidth="80" prefHeight="80"/>
        <Button text="-" onAction="#handleOperator" GridPane.rowIndex="2" GridPane.columnIndex="3" prefWidth="80" prefHeight="80"/>

        <Button text="0" onAction="#handleNumber" GridPane.rowIndex="3" GridPane.columnIndex="0" prefWidth="80" prefHeight="80"/>
        <Button text="C" onAction="#handleClear" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="80" prefHeight="80"/>
        <Button text="=" onAction="#handleEquals" GridPane.rowIndex="3" GridPane.columnIndex="2" prefWidth="80" prefHeight="80"/>
        <Button text="+" onAction="#handleOperator" GridPane.rowIndex="3" GridPane.columnIndex="3" prefWidth="80" prefHeight="80"/>
    </GridPane>
</VBox>
